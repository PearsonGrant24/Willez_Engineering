pipeline {
    agent any
    
    stages {
        stage("Build"){
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }

            }
            steps {
                sh '''
                    rm -rf /var/lib/jenkins/workspace/Willez-Eng-Pipeline
                    ls -la
                    node --version
                    npm --version
                    npm cache clean --force
                    npm ci --verbose
                    npm run build
                '''
            }
        }
    }
}