pipeline {
    agent any
    
    stages {        
        stage("Build"){
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }

            }
            steps {
                sh '''     
                    export NPM_CONFIG_CACHE=$PWD/.npm-cache
                    mkdir -p $NPM_CONFIG_CACHE

                    ls -la
                    cat package-lock.json || echo "Lockfile not found ..."
                    npm ci --verbose
                    
                '''
            }
        }
    }
}