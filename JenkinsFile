pipeline {
    agent any
    
    stages {
        stage('clean workspace') {
            steps {
                deleteDir()
            }
        }
        stage("Build"){
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }

            }
            steps {
                sh '''                    
                    ls -la
                    node --version
                    npm --version
                    npm cache clean --force
                    npm ci --verbose
                    npm run build
                '''
            }
        }
    }
}